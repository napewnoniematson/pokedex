<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hp_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pokemon_stats_health_points"
            android:layout_column="1"/>

        <TextView
            android:id="@+id/hp_val_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pokemon_stats_default_value"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:layout_column="2" />
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/atk_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pokemon_stats_attack_points"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/atk_val_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pokemon_stats_default_value"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:layout_column="2"/>
    </TableRow>
</TableLayout>